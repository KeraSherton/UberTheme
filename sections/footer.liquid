
<footer id="footer" class="{% if section.settings.set_background_image %} bg_image {% else %} footer_bg {% endif %}">
  <div class="footer_container">
      
      {% case section.blocks.size %}
        {% when 0 %}
        {% when 1 %}
          {% assign column_width = '100' %}
        {% when 2 %}
          {% assign column_width = '50' %}
        {% when 3 %}
          {% assign column_width = '33.33' %}
        {% when 4 %}
          {% assign column_width = '25' %}
        {% when 5 %}
          {% assign column_width = '20' %}
      {% endcase %}

    
