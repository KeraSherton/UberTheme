   font-weight: {{block.settings.title_font.weight}};
   color: {{block.settings.title_color}};
   font-size: {{block.settings.title_size}}px;
   margin-bottom: 0.3em;
   text-align: {{block.settings.position_text}};
  }
  .block_text-{{ block.id }}{
    font-family: {{block.settings.text_font.family}};
    font-weight: {{block.settings.text_font.weight}};
    color: {{block.settings.text_color}};
    font-size: {{block.settings.text_size}}px;
    margin-bottom: 0.6em;
    text-align: {{block.settings.position_text}};
  }
  .social-sharing{
    display: flex;
    list-style-type: none;
    flex-wrap: wrap;
    justify-content: {{block.settings.position_icons}};
  }
  .share-fb{
    fill: #3b5998;
  }
  .share-tw{
    fill: #55acee;
  }
  .share-pin{
    fill: #BD081C;
  }
  .share-inst{
    fill: #bc2a8d;
  }
  .share-tumblr{
    fill: #34526f;
  }
  .share-snap{
    fill: #030303;
  }
  .share-yt{
    fill: #FF0000;
  }
  .share-vimeo{
    fill: #86c9ef;
  }
  .share-icon{
    height: {{block.settings.icons_size}}px;
    fill: {{block.settings.icon_color}};
  }
