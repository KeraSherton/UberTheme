      {{ block.settings.menu_title_font | font_face }}
      {{ block.settings.menu_links_font | font_face }}

      .footer-links-{{ block.id }}{
        color: {{block.settings.menu_links_color}};
        font-family: {{block.settings.menu_links_font.family}};
        font-size: {{block.settings.menu_size}}px;
        }
      .footer-links-{{ block.id }}:hover{
        color: {{block.settings.menu_color_hov}};
       }
      .menu_title-{{ block.id }}{
        font-size: {{block.settings.menu_title_size}}px;
        color: {{block.settings.menu_color}};
        font-family: {{block.settings.menu_title_font.family}} ;
        margin-bottom: 0.3em;
      }
      .footer_menu-links-{{ block.id }}{
        list-style-type: none;
        padding-inline-start: 0;
        margin-bottom: 0.3em;
      } 
      .block-settings-{{ block.id }}{
        text-align: {{block.settings.align}};
      } 
    {%endstyle%}

  <div class="footer_grid_item block-settings-{{ block.id }}" >
    <p class="menu_title-{{ block.id }}">{{block.settings.title}}</p>
    {% for link in linklists[block.settings.menu].links %}
      <ul class="footer_menu-links-{{ block.id }}">
        <li> 
          <a href="{{ link.url }}" class="footer-links-{{ block.id }}">{{ link.title }}</a>
        </li>
      </ul>
    {% endfor %}
  </div>
  {% when 'info_block' %}
