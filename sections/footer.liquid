    font-weight: {{block.settings.newsletter_font.weight}};
    color: {{block.settings.title_color}};
    font-size: {{block.settings.title_size}}px;
    margin-bottom: 0.3em;
    text-align: {{block.settings.position_text}};
   }
  .input-group-{{ block.id }}{
    width: 100%;
    display: flex;
  }

  .newsletter-input-{{ block.id }}{
    background-color: {{block.settings.bg_input_color}};
    border: none;
    width: 90%;
    border-radius: 7px 0 0 7px;
    padding: 2px;
  }
  .separate-{{ block.id }} {
    flex-direction:column;
  }
  .separate-input-{{ block.id }}{
    background-color: {{block.settings.bg_input_color}};
    border: none;
    width: 90%;
    border-radius: 7px;
    padding: 2px;
  }

  .inline-button-{{ block.id }}{
    background-color: {{block.settings.button_color}};
    border: none;
    border-radius: 7px;
    margin: 2%;
    justify-self: left; 
    color: {{block.settings.button_text_color}};
    padding: {{block.settings.button_size_height}}px {{block.settings.button_size_width}}px; 
  }
  .newsletter-submit-{{ block.id }}{
    background-color: {{block.settings.button_color}};
    border: none;
    border-radius: 0 7px 7px 0;
    color: {{block.settings.button_text_color}};
    padding: {{block.settings.button_size_height}}px {{block.settings.button_size_width}}px; 
    self-align: center;
  }
  {%endstyle%}
    <div class="footer_grid_item-{{ block.id }}">
      <p class="block_title-{{ block.id }}">{{ block.settings.title }}</p>
      {% form 'customer' %}
      {{ form.errors | default_errors }}
      {% if form.posted_successfully? %}
        <p class="block_title-{{ block.id }}">{{ block.settings.confirmation }}</p>
      {% else %}
        <div class="{% if block.settings.input_location %} separate-{{ block.id }} {%else%} input-group-{{ block.id }} {% endif %}">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input type="email"
            name="contact[email]"
            id="Email"
            class="{% if block.settings.input_location %} separate-input-{{ block.id }} {%else%} newsletter-input-{{ block.id }} {% endif %}  "
            value="{% if customer %}{{ customer.email }}{% endif %}"
            placeholder="{{ block.settings.email_placeholder}}"
            autocorrect="off"
            autocapitalize="off">
          <button type="submit" class="{% if block.settings.input_location %} inline-button-{{ block.id }} {%else%} newsletter-submit-{{ block.id }}  {% endif %}" name="commit" id="Subscribe">
              <span class="newsletter__submit-text--large-{{ block.id }}">{{ block.settings.submit}}</span>
            </button>
           </div>
          {% if block.settings.show_agree %}
            <input type="checkbox" id="privacy"> 
            <label for="privacy">I agree with <a href="/privacy-policy">Privacy Policy</a></label>
          {% endif %}
      {% endif %}
      {% endform %}
